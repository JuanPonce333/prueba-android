<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="151dp"
        android:layout_height="161dp"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/nombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Bumblebum"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>


    <TextView
        android:id="@+id/descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="La aventura está por iniciar, por favor inicia sesión"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/nombreApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"/>


    <EditText
        android:id="@+id/usuario"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:hint="Usuario"
        app:layout_constraintTop_toBottomOf="@id/descripcion"
        app:layout_constraintStart_toEndOf="@id/iconoUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/iconoUsuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_user"
        app:layout_constraintTop_toTopOf="@id/usuario"
        app:layout_constraintBottom_toBottomOf="@id/usuario"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"/>


    <EditText
        android:id="@+id/contraseña"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPassword"
        android:padding="12dp"
        android:hint="Contraseña"
        app:layout_constraintTop_toBottomOf="@id/usuario"
        app:layout_constraintStart_toEndOf="@id/iconoContraseña"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/iconoContraseña"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_password"
        app:layout_constraintTop_toTopOf="@id/contraseña"
        app:layout_constraintBottom_toBottomOf="@id/contraseña"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"/>


    <Button
        android:id="@+id/ingresar"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Ingresar"
        android:textSize="20sp"
        android:backgroundTint="@color/blue1"
        app:layout_constraintTop_toBottomOf="@id/contraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="64dp"/>


    <Button
        android:id="@+id/recuperarContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="96dp"
        android:backgroundTint="@color/purple"
        android:text="Recupera tu contraseña"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ingresar" />

    <Button
        android:id="@+id/ingresarGoogle"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/white"
        android:text="    Ingresa con Google"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/recuperarContraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="48dp"/>

    <ImageView
        android:id="@+id/iconoGoogle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/google"
        app:layout_constraintTop_toTopOf="@id/ingresarGoogle"
        app:layout_constraintBottom_toBottomOf="@id/ingresarGoogle"
        app:layout_constraintStart_toStartOf="@id/ingresarGoogle"
        android:layout_marginStart="12dp"/>


    <TextView
        android:id="@+id/sinCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:text="¿No tienes cuenta?"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ingresarGoogle" />

    <Button
        android:id="@+id/registrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple"
        android:text="Registrate"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/sinCuenta"
        app:layout_constraintTop_toBottomOf="@id/ingresarGoogle" />

</androidx.constraintlayout.widget.ConstraintLayout>
