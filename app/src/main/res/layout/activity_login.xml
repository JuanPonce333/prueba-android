<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="151dp"
        android:layout_height="161dp"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Bumblebum"
        android:textColor="#FFF"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="La aventura está por iniciar, por favor inicia sesión"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="183dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Recupera tu contraseña"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="479dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="32dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPassword"
        android:padding="12dp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="317dp" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:layout_marginHorizontal="32dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPersonName"
        android:padding="12dp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="241dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="86dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/ic_user"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="241dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="94dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/ic_password"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="313dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="218dp"
        android:layout_height="55dp"
        android:text="Ingresar"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="409dp"
        android:backgroundTint="@color/blue1"

        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Registrate"
        android:textColor="#FFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="634dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="313dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/white"
        android:text="    Ingresa con Google"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="557dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="¿No tienes cuenta?"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="634dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="49dp"
        android:layout_height="42dp"
        app:srcCompat="@drawable/google"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="564dp" />


</androidx.constraintlayout.widget.ConstraintLayout>